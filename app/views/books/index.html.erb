<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Price</th>
      <th>Status</th>
      <th>Category</th>
      <th>Publisher</th>
      <th>Tac gia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= image_tag (book.picture) %></td>
        <td><%= book.price %> vnd</td>
        <td>
          <% if book.status %>
            Con hang
          <% end %>
        </td>
        <td><%= book.category.name %></td>
        <td><%= book.publisher.name %></td>
        <td>
            <% @joinbook.where(id: book.id).each do |j| %>
                <%= j.author.name %>
            <% end %>
        </td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books, theme: "twitter-bootstrap-3" %>
<br>

<%= link_to "New Book", new_book_path %>
