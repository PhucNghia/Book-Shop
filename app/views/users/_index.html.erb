<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t("users.name") %></th>
      <th><%= t("users.password") %></th>
      <th><%= t("users.email") %></th>
      <th><%= t("users.phone") %></th>
      <th><%= t("users.address") %></th>
      <th><%= t("users.role") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.role %></td>
        <td><%= link_to t("users.show"), user %></td>
        <td><%= link_to t("users.edit1"), edit_user_path(user) %></td>
        <td><%= link_to t("users.destroy"), user, method: :delete, data: {confirm: t("users.confirm_delete")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
