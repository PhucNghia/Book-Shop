<p id="notice"><%= notice %></p>
<br>
<div class="col-md-offset-3">
  <div class="input-group user-info col-xs-6" >
    <span class="input-group-addon"><%= t "users.name"%></span>
    <span class="form-control"><%= @user.name %></span>
  </div>

  <div class="input-group user-info col-xs-6">
    <span class="input-group-addon"><%= t "users.email" %></span>
    <span class="form-control"><%= @user.email %></span>
  </div>

  <div class="input-group user-info col-xs-6">
    <span class="input-group-addon"><%= t "users.phone" %></span>
    <span class="form-control"><%= @user.phone %></span>
  </div>

  <div class="input-group user-info col-xs-6">
    <span class="input-group-addon"><%= t "users.address" %></span>
    <span class="form-control"><%= @user.address %></span>
  </div>

  <div class="input-group user-info col-xs-6">
   <span class="input-group-addon"><%= t "users.role" %></span>
   <% if @user.role == 1%>
      <span class="form-control"><%= t "users.role_admin"  %></span>
    <% else %>
      <span class="form-control"><%= t "users.role_user"  %></span>
    <% end %>
  </div>

  <%= link_to t("users.edit1"), edit_user_path(@user), class: "btn btn-primary"%>
  <%= link_to t("users.back"), root_path, class: "btn btn-primary" %>
</div>
